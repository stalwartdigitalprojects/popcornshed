{% schema %}
{
  "name": "Featured category",
  "class": "featured-category-home-section",
  "max_blocks": 12,
    "settings": [
      {
        "type": "range",
        "id": "featured_promos_per_row",
        "label": "Promotions per row",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "select",
        "id": "featured_promos_grid",
        "label": "Promotions grid",
        "options": [
            {
              "value": "standard",
              "label": "Standard"
            },
            {
              "value": "full_width",
              "label": "Full width"
            }
          ],
        "default": "full_width"
      },
      {
        "type": "select",
        "id": "featured_links_animation",
        "label": "Promotions animation",
        "options": [
          {
            "value": "",
            "label": "None"
          },
          {
            "value": "fadeIn",
            "label": "Fade In"
          },
          {
            "value": "fadeInUp",
            "label": "Fade Up"
          },
          {
            "value": "fadeInDown",
            "label": "Fade Down"
          }
        ],
        "default": "fadeInDown"
      },    
      {
        "type": "text",
        "id": "promo_text_title",
        "label": "Title of Section",
        "default": "Featured Items"
      },
      {
        "type": "text",
        "id": "promo_link_title",
        "label": "Title of Link",
        "default": "Featured Items"
      },
      {
        "type": "url",
        "id": "promo_text_link",
        "label": "URL of Section"    
      }
	],
	"blocks": [
    {
      "type": "image",
      "name": "Promotion",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "840 x 840px recommended"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
		{
          "type": "color",
          "id": "title_color",
          "label": "Title Color"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Header",
          "default": "Feature"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Promotion description details.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        }
      ]
    }
],
  "presets": [{
    "name": "Featured category",
    "category": "Image",
    "settings": {
    "featured_promos_grid": "full_width"
    },
    "blocks": [
      {
        "type": "image",
        "settings": {

        }
      },
      {
        "type": "image",
        "settings": {

        }
      },
      {
        "type": "image",
        "settings": {

        }
      }
    ]
  }]
}

{% endschema %}
