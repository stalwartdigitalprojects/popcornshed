{% if section.blocks.size > 0 %}
<div class="container mobile_hidden featured-category-container ez-animate promotions-grid-{{ featured_promos_grid }}" data-animation="fadeInUp" data-animation-offset="95%">
  <div  class="js-featured-promotions {% if section.blocks.size > 3%}js-featured-slider{% endif %} featured-promotions promo-per-row-{{ featured_promos_per_row }} clearfix"
       data-promo-animation="{{ section.settings.featured_links_animation }}">
    {% for block in section.blocks %}
    <figure class="feature-section feature-section2 section-{{ forloop.index }} promo-{{ forloop.index }} title-overlay-{{ title_on_image }} {% if section.settings.featured_links_animation != blank %}promo-animation--true{% endif %}" {{ block.shopify_attributes }}>
      <div class="feature-inner feature-style--square  ">
        {% if block.settings.image != nil %}
        <img src="{{ block.settings.image | img_url: '100x' }}"
             alt="{% if block.settings.image.alt != blank %}{{ block.settings.image.alt }}{% else %}{{ block.settings.title | escape }}{% endif %}"
             class="lazyload full-width-image {{ settings.image_loading_style }}"
             data-sizes="auto"
             data-lazy="{{block.settings.image | img_url: '100x'}}" 
             data-src="{{ block.settings.image | img_url: '1400x' }}"
             data-srcset="{{ block.settings.image | img_url: '240x' }} 240w,
                          {{ block.settings.image | img_url: '480x' }} 480w,
                          {{ block.settings.image | img_url: '600x' }} 600w,
                          {{ block.settings.image | img_url: '800x' }} 800w,
                          {{ block.settings.image | img_url: '900x' }} 900w,
                          {{ block.settings.image | img_url: '1000x' }} 1000w"
             />
        {% else %}
        {% capture i %}{% cycle "1", "2", "3", "4", "5", "6" %}{% endcapture %}
        {{ 'collection-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--promotions' }}
        {% endif %}
        {% if block.settings.text != blank or block.settings.button_label != blank or block.settings.title != blank and title_on_image != blank %}
        <figcaption class="" >
          <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %}class="link-promo">
            <div class=" top-62 collection-title">
              <style>
                .featured-category-home-section .link-promo .arrow-{{block.settings.title_color | replace:'#',''}}:before{
                  border-top: 2px solid {{block.settings.title_color}} !important;
                  border-right: 2px solid {{block.settings.title_color}} !important;
                }
                span.arrow-{{block.settings.title_color | replace:'#','' }}:before {
                  border-top: 2px solid {{block.settings.title_color}};
                  border-right: 2px solid {{block.settings.title_color}};
                }
                span.arrow-{{block.settings.title_color | replace:'#',''}}:after {border-bottom: 2px solid {{block.settings.title_color}} !important;}
              </style>
              
              {% if section.blocks.size > 3%}
                {% if block.settings.title != blank %}
                <h3 class="title" style="color:{{block.settings.title_color}};">{{ block.settings.title }}</h3>
                <span class="arrow arrow-{{block.settings.title_color | replace:'#',''}}"></span>
                {% endif %}
              {% else %}
                {% if block.settings.title != blank %}
                <h2 class="title" style="color:{{block.settings.title_color}};">{{ block.settings.title }}</h2>
                <span class="arrow arrow-{{block.settings.title_color | replace:'#',''}}"></span>
                {% endif %}
              
              {% endif %}
              
              
              {% comment %}
                <div class="feature-overlay feature-details2">
                  {% if block.settings.text != blank %}
                  <div class="description">{{ block.settings.text }}</div>
                  {% endif %}

                  {% if block.settings.button_label != blank %}
                  <div class="button btn-new ">{{ block.settings.button_label }}</div>
                  {% endif %}
                </div> 
              {% endcomment %}
            </div>
          </a>

        </figcaption>
        {% elsif block.settings.link != blank %}
        <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %}class="link-promo"></a>
        {% endif %}
      </div>
      {% if title_on_image == blank %}
      {% comment %}
      {% if block.settings.title != blank %}
<!--       <a {% if block.settings.link != blank %}href="{{ block.settings.link }}"{% endif %}>
        <h2 class="title title-below">{{ block.settings.title }}</h2>
      </a> -->
      {% endif %}
      {% endcomment %}
      {% endif %}
    </figure>
    {% endfor %}
  </div>
</div>





