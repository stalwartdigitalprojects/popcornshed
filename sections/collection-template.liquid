  {% if section.settings.featured_collection_image %}
  {% capture sizes %}100x,480x,765x,1400x,1600x{% endcapture %}
  {% assign sizes = sizes | split: ',' %}
  {% assign bg_img = '' %}
  {% if collection.image %}            
  {% assign bg_img =  collection.image | img_url: '1200x' %}
  {%- elsif section.settings.image -%}
  {% assign bg_img = section.settings.image | img_url: '1200x' %}
  {%- else %}            
  {% assign bg_img = collection.products.first.featured_image | product_img_url: '1200x' %}
  {% endif %}

{% if section.settings.partial_collection_banner == true %}
<header class="banner center page_banner mobile-size-banner dark-overlay-{{ section.settings.image_darken }}">
 <div class="row"> 
   <div class="collection-banner-section">
  <div class="plp-left-side-img">
    <div class="collection-left-img">
      <img {% if collection.image %}
         src="{{ collection.image | img_url: sizes.first }}"
         {% assign bg_img =  collection.image | img_url: sizes.first %}
         data-src="{{ collection.image | img_url: sizes.last }}"
         {%- elsif section.settings.image -%}
         src="{{ section.settings.image | img_url: sizes.first }}"
         data-src="{{ section.settings.image | img_url: sizes.last }}"
         {% assign bg_img = section.settings.image | img_url: sizes.first %}
         {%- else %}
         src="{{ collection.products.first.featured_image | product_img_url: sizes.first }}"
         data-src="{{ collection.products.first.featured_image | product_img_url: sizes.last }}"
         {% assign bg_img = collection.products.first.featured_image | product_img_url: sizes.first %}
         {% endif %}
           alt="{{collection.title}}"
           class="lazyload {{ settings.image_loading_style }}"
           sizes="auto"
           data-srcset="{%- for size in sizes -%}
                   {%- if collection.image -%}
                   {{ collection.image | img_url: size }}
                   {%- elsif section.settings.image -%}
                   {{ section.settings.image | img_url: size }}
                   {%- else -%}
                   {{ collection.products.first.featured_image | product_img_url: size }}
                   {%- endif -%}
                   {{ size | replace: "x", "w" }}{% unless forloop.last %},{% endunless %}
                   {%- endfor -%}
                   " />
    </div>
  </div>
  <div class="plp-right-side-content">
    <div class="collection-right-content">
      <h1 class="main-title">{{collection.title | upcase}}</h1>
      {% if collection.description != blank %}
      <div class="collection_desc_wrapper mobile_hidden">
        {{ collection.description }}
        {% comment %}
        <div class="smalldata">
          <p>
            <a href="javascript:;" class="show-more">[+]</a>
          </p>

        </div>
        <div class="bigdata" style="display:none;">
          {{ collection.description }}
          <a href="javascript:;"  class="show-less" >[-]</a>
        </div>
        {% endcomment %}
      </div>
      {% endif %}
    </div>
  </div>
</div>
  </div>
</header>
{% else %}

<header class="banner center page_banner mobile-size-banner dark-overlay-{{ section.settings.image_darken }}" style="background: url('{{ bg_img }}') no-repeat;background-size: cover;background-position: 100% 100%;display: flex;height: 500px;">

    {% comment %}    
    <img
         {% if collection.image %}
         src="{{ collection.image | img_url: sizes.first }}"
         {% assign bg_img =  collection.image | img_url: sizes.first %}
         data-src="{{ collection.image | img_url: sizes.last }}"
         {%- elsif section.settings.image -%}
         src="{{ section.settings.image | img_url: sizes.first }}"
         data-src="{{ section.settings.image | img_url: sizes.last }}"
         {% assign bg_img = section.settings.image | img_url: sizes.first %}
         {%- else %}
         src="{{ collection.products.first.featured_image | product_img_url: sizes.first }}"
         data-src="{{ collection.products.first.featured_image | product_img_url: sizes.last }}"
         {% assign bg_img = collection.products.first.featured_image | product_img_url: sizes.first %}
         {% endif %}
         alt="{{ collection.title | escape }}"
         class="lazyload {{ settings.image_loading_style }}"
         sizes="100vw"
         srcset="{%- for size in sizes -%}
                 {%- if collection.image -%}
                 {{ collection.image | img_url: size }}
                 {%- elsif section.settings.image -%}
                 {{ section.settings.image | img_url: size, format: 'pjpg' }}
                 {%- else -%}
                 {{ collection.products.first.featured_image | product_img_url: size }}
                 {%- endif -%}
                 {{ size | replace: "x", "w" }}{% unless forloop.last %},{% endunless %}
                 {%- endfor -%}
                 " />
    {% endcomment %}

    <style>
      header.bg-img{background: url({{ collection.image | img_url:"2000x" }}) no-repeat;background-size: cover;background-position: center center;display: flex;height:200px;}
    </style>
    {% if section.settings.display_collection_title %}
    <div class="caption captionOverlay--true">
      <div class="position-center caption js-caption">
        <h1 class="headline" style="color:{{section.settings.collection_title_color | default:"#fff" }}">{{ collection.title | upcase }}</h1>
      </div>
    </div>
    {% endif %}
  </header>

{% endif %}

  
