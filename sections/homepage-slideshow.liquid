{% if section.settings.wide_display == false %}
<div class="container">
  <div class="sixteen columns">
{% endif %}
{% assign block_styles = blank %}
{% if section.blocks.size > 0 %}
  <section  id="homepage_slider-{{section.id}}"
        class="banner homepage-slideshow js-homepage-slideshow slideshow_animation--{{ section.settings.slideshow_animation }} {% if section.settings.slideshow_text_animation != '' %}text-animation--true{% else %}text-animation--false{% endif %} {% if settings.slideshow_button_style != true %}light-button{% endif %}"
        data-slider-id="homepage_slider-{{section.id}}"
        data-slideshow-speed="{{section.settings.slideshow_speed}}"
        data-slideshow-autoslide="{{section.settings.auto_slide}}"
        data-slideshow-text-animation="{{section.settings.slideshow_text_animation}}"
        data-adaptive-height="{{section.settings.activate_adaptiveHeight}}" >

        
    {% for block in section.blocks %}

    
      {%capture bg_imgs %}
    {% if block.settings.custom_background_img != blank %}
    [data-block-id="{{block.id}}"]{
      background-color:{{block.settings.custom_background_color}} !important;
      background-image:url('{{block.settings.custom_background_img | img_url:"master"}}') !important;
    }
    {% endif %}
    {% endcapture%}
    
    {% capture block_styles%}
      {{block_styles}}
      [data-block-id="{{block.id}}"] {
        background-color: {{block.settings.mobile_background_color}} !important;
      }
      [data-block-id="{{block.id}}"] .subtitle, [data-block-id="{{block.id}}"] .headline {
      color: {{block.settings.mobile_heading_color}} !important;
      }
    {% endcapture %}
        <div id="block_{{block.id}}" role="banner" class="{% if block.settings.enable_partial_img == true %}enable_partial_img {% endif %} {% if block.settings.enable_righ_image == true %}right-part-image{% endif %} gallery-cell slide-{{ forloop.index }}" {{ block.shopify_attributes }} data-block-id="{{block.id}}" style="{% if block.settings.enable_partial_img == true %} background:{{block.settings.custom_background_color }}; {% endif %}{% if block.settings.custom_background_img != blank %}background-image:url('{{block.settings.custom_background_img | img_url:"master"}}') !important; background-repeat: repeat;{% endif %}"> 
          {% if block.settings.enable_partial_img == true %}
            <div class="left-part-banner">
              {% else %}
              <div class="single-banner-image">
          {% endif %}
                
          {% assign video_poster = block.settings.image %}
            
              {% assign video_poster = block.settings.image | img_url:"master" %}
            
            {% assign mobile_video_poster = block.settings.mobile_image | img_url:"master" %}
            
          {% if block.settings.enable_video == true %}
            <div class="mobile_hidden banner-video slide-{{ forloop.index }}" data-block-id="{{block.id}}">
              
              <video id="banner-home-video" role="presentation" name="desktop-banner-home-video-{{block.id}}" title="{{block.settings.title}}" loop="true" width="100%" muted="true" playsinline="" webkit-playsinline="" {% if block.settings.autoplay_video ==true %} autoplay="autoplay" {% else %} controls{% endif %} poster="{{ video_poster}}">
                
                <source src="{{ block.settings.video_url }}" type="video/webm">
                <source src="{{ block.settings.video_url }}" type="video/mp4">
                  Your browser does not support the video tag. <a href="{{ block.settings.video_url }}" target="_blank" tilte="Video of {{block.settings.title}}">Open Video in New window</a>
              </video>
            </div>
            <div class="mobile_only mobile-banner-video slide-{{ forloop.index }}" data-block-id="mobile-{{block.id}}">
              <video id="mobile-banner-home-video" role="presentation" name="mobile-banner-home-video-{{block.id}}" loop="true" width="100%"  title="Mobile Video - {{block.settings.title}}" playsinline="" webkit-playsinline="" muted="true" {% if block.settings.autoplay_video ==true %} autoplay="autoplay" {% else %} controls{% endif %} poster="{{ mobile_video_poster}}">
                <source src="{{ block.settings.video_url_mobile }}" type="video/webm">
                <source src="{{ block.settings.video_url_mobile }}" type="video/mp4">
                  Your browser does not support the video tag. <a href="{{ block.settings.video_url }}" target="_blank" tilte="Video of {{block.settings.title}}">Open Video in New window</a>
              </video>
            </div>
            <style>
              .homepage-slideshow video{height:{{ block.settings.desktop_mp4_video_height  }}vh !important;}
              @media screen and (max-width:798px){
                .homepage-slideshow video{height:{{ block.settings.mobile_mp4_video_height }}vh !important;}
              }
            </style>
          {% else %}
          
            {% if block.settings.image != nil %}
            {% assign mobile_img = block.settings.mobile_image %}
          {% if mobile_img != blank %}
          		{% assign mobile_img = block.settings.mobile_image %}
          	{% else %}
          	{% assign mobile_img = block.settings.image %}
          {% endif%}              
              {% include 'image-element', image: block.settings.image, alt: block.settings.image.alt, back_to_basics: true, additional_classes: 'mobile_hidden slide-img-lazy' %}
              
              {% include 'image-element', image: mobile_img, alt: block.settings.image.alt, back_to_basics: true, additional_classes: 'mobile_only slide-img-lazy' %}
              
          {% else %}
                    {% capture i %}{% cycle "1", "2" %}{% endcapture %}
                    {{ 'lifestyle-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--slideshow' }}
                  {% endif %}
          {% endif %}

          {% if block.settings.enable_partial_img == true %}
            </div>
              {% else %}
          </div>
          {% endif %}
           {% if block.settings.enable_partial_img == true %}<div class="right-part-banner"> {% else %} <div class="single-banner-contents"> {% endif %}
          {% unless block.settings.pretext == blank and block.settings.title == blank and block.settings.subtitle == blank and block.settings.button1 == blank and block.settings.button2 == blank %}
            <div class="{% if block.settings.enable_partial_img == true %}enable_partial_img{% endif %} caption position-{{block.settings.text_position}} js-caption css3_animate">
                <div class="caption-content
                            caption-background-{{block.settings.caption_background}}
                            caption-transparency-{{ block.settings.caption_background_transparency }}
                            align-{{block.settings.text_align}}">
                  {% if block.settings.pretext != blank %}
                    <div class="pretext" style="color:{{block.settings.custom_heading_color}}; font-size:{{block.settings.desktop_pretext_font}}px;">
                      {{ block.settings.pretext }}
                    </div>
                  {% endif %}
                  {% if forloop.first == true and block.settings.title != blank %}
                    <h1 class="headline slide" style="color:{{block.settings.custom_heading_color}}; font-size:{{block.settings.desktop_heading_font}}px;">
                      {{ block.settings.title }}
                    </h1>
                  {% elsif block.settings.title != blank %}
                    <p class="headline slide" style="color:{{block.settings.custom_heading_color}}; font-size:{{block.settings.desktop_heading_font}}px;">
                      {{ block.settings.title }}
                    </p>
                  {% endif %}
                  {% if block.settings.subtitle != blank %}
                    <div class="subtitle slide" style="color:{{block.settings.custom_heading_color}}; font-size:{{block.settings.desktop_subheading_font}}px;">
                      {{ block.settings.subtitle }}
                    </div>
                  {% endif %}
                  
                  {% if block.settings.popup_video_url != blank %}
                  <a data-fancybox data-width="1920" data-height="1080" href="{{block.settings.popup_video_url}}" class="action_button first_button  btn_style2 slide" style="">
                    {{ block.settings.button1 }}
                  </a>
                  {% else %}
                  
                    {% if block.settings.button1 != blank %}
                      <a {% if block.settings.button1_link != blank %}href="{{ block.settings.button1_link }}"{% endif %} class="action_button first_button  btn_style2 slide" style="">
                        {{ block.settings.button1 }}
                      </a>
                    {% endif %}

                    {% if block.settings.button2 != blank %}
                      <a {% if block.settings.button2_link != blank %}href="{{ block.settings.button2_link }}"{% endif %} class="action_button second_button  btn_style2 slide">
                        {{ block.settings.button2 }}
                      </a>
                    {% endif %}
                  
                  {% endif %}
                </div>
              </div>
          <style>
            @media screen and (max-width: 798px) {
              #block_{{block.id}} .right-part-banner .caption-content .pretext{
                font-size:{{block.settings.mobile_pretext_font}}px !important;
              }
              #block_{{block.id}} .right-part-banner .caption-content .headline{
                font-size:{{block.settings.mobile_heading_font}}px !important;
                padding:0px;
              }
              #block_{{block.id}} .right-part-banner .caption-content .subtitle{
                font-size:{{block.settings.mobile_subheading_font}}px !important;
              }
            }
          </style>
          {% endunless %}
          {% if block.settings.enable_partial_img == true %}</div> {% else %} </div> {% endif %}
        </div>
    {% endfor %}
  </section>
{% endif %}

{% if section.settings.wide_display == false %}
  </div>
</div>
{% endif %}

{% comment %}Section specific CSS{% endcomment %}
<style>
  .homepage-slideshow video {
    object-fit: cover;
  }
  {{bg_imgs}}
  @media only screen and (max-width: 480px) {
    {{block_styles}}
  }
</style>


