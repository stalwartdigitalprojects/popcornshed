                </div>
                {% endif %}
          
                {% if product.metafields.stamped.badge != blank and product.metafields.stamped.reviews != blank and product.metafields.stamped.reviews_count != "0" %}
                <div id="stamped-main-widget" class="stamped-main-widget" data-product-id="{{ product.id }}" data-name="{{ product.title | escape }}" data-url="{{ shop.url }}{{ product.url }}" data-image-url="{{ product.featured_image | product_img_url: "large" |replace: " ? ", " % 3F" | replace: "& "," % 26"}}" data-description="{{ product.description | escape }}" data-product-sku="{{product.handle}}" data-product-type="{{product.type}}"> {{ product.metafields.stamped.reviews }} </div>
                {% endif %}

                {% comment %}{% if settings.enable_shopify_review_comments and settings.review_position == "below_gallery" %}
                <div class="shopify-reviews">
                  <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
                </div>
                {% endif %}{% endcomment %}
              </div>

              {% if sidebar %}

              {% if section.settings.display_related_products %}
              {% include 'related-products' %}
              {% endif %}
              {% if section.settings.display_recently_viewed %}
              {% include 'recently-viewed' %}
              {% endif %}

            </div>
          </div>
        </div>

        {% else %}

      </div>
