
{% if prod_var != blank %}
  {% assign variant = prod_var %}
{% else %}
	{% assign variant = product.selected_or_first_available_variant %}
{% endif %}
    <div class="mobile_product_title center mobile_only">  
      {% assign variant = product.selected_or_first_available_variant %}
      <h2 class="product_name" itemprop="name">{{ product.title }}</h2>
      {% if settings.enable_shopify_product_badges and settings.enable_shopify_review_comments %}
      <span itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating" style="display:none;">
        <span itemprop="ratingValue">4</span>
      </span> 
      <span class=" stamped-product-reviews-badge" data-product-sku="{{ product.handle }}" data-id="{{ product.id }}" data-product-type="{{product.type}}" data-product-title="{{product.title}}"  style="display:block;">{{ product.metafields.stamped.badge }}</span>
      {% endif %}        
      <!--           <div class="feature_divider"></div> -->

      {% assign product_tags = product.tags | join: ' ' %}
      {% if product_tags contains 'meta-size-chart-' %}
      {% for tag in product.tags %}
      {% if tag contains 'meta-size-chart-' %}
      <a href="#size-chart{{product.id}}" class="size_chart" data-remodal-target="size-chart{{product.id}}" data-no-instant>{{ 'products.product.size_chart' | t }} <span class="icon-right-arrow"></span></a>
      {% include 'popup-size-chart', product_id: product.id %}
      {% endif %}
      {% endfor %}
      {% elsif settings.size_chart != blank %}
      <a href="#size-chart" class="size_chart" data-remodal-target="size-chart" data-no-instant>{{ 'products.product.size_chart' | t }} <span class="icon-right-arrow"></span></a>
      {% endif %}

      <div style="display:none !important" itemprop="brand" itemscope itemtype="http://schema.org/Brand" >
        <span itemprop="name">{{ shop.name | escape }}</span>
      </div>

      {% if collection_handles contains 'coming-soon' %}
      <p class="modal_price mr-0 pd-0">{{ 'collections.general.coming_soon' | t }}</p>
      {% else %}
      <p class="modal_price mr-0 pd-0" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
        <meta itemprop="priceCurrency" content="{{ shop.currency }}" />
        <meta itemprop="seller" content="{{ shop.name | escape }}" />
        <link itemprop="availability" href="http://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}">
        <meta itemprop="itemCondition" content="New" />
        <meta itemprop="price" content="{{ variant.price | money_without_currency | remove: "," }}" />
        <meta itemprop="priceValidUntil" content="{{ 'now' | date: '%s' | plus: 31536000 | date: '%Y-%m-%d' | uri_encode | replace:'+','%20' }}" />
        <meta itemprop="url" content="{{ shop.url }}{{ product.url }}" />

<!--                       <span class="sold_out">{% if variant.available == false %}{{ 'products.product.sold_out' | t }}{% endif %}</span> 
        {% if variant.available == false %}<span class="money">{{ product.price_min | money }}</span>{% endif %}-->
        <span itemprop="price" content="{{ variant.price | money_without_currency | remove: "," }}" class="{% if variant.compare_at_price > variant.price %}sale{% endif %}">
          <span class="current_price">
            {% if product.price_min > 0 %}
            <span class="money">{{ product.price_min | money }}</span>
            {% else %}
            {{ settings.free_price_text }}
            {% endif %}
          </span>
        </span>           

        {% if section.settings.display_savings %}
        <!--<span class="sale savings pd-0 mr-0">
        {% if variant.price < variant.compare_at_price %}
        {{ 'products.product.savings' | t }}  {{ variant.compare_at_price | minus: variant.price | times: 100 | divided_by: variant.compare_at_price }}% (<span class="money">{{ variant.compare_at_price | minus: variant.price | money }}</span>)
        {% endif %}
</span> -->
        <span class="sale savings">
          <span class="was_price">
            {% if variant.price < variant.compare_at_price  %}
            <span class="money"> {{ variant.compare_at_price | money }}</span>
            {% endif %}
          </span>
          {% if variant.price < variant.compare_at_price  %}
          <span class="money price-percent-off">({{ variant.compare_at_price | minus: variant.price | times: 100 | divided_by: variant.compare_at_price }}% off)</span>
          {% endif %}
        </span>
        {% endif %}
      </p>

      {% endif %}
      <!--  Yotpo Review Start Ratings product images -->
      <div class="yotpo bottomLine mr-0 pd-0"
           data-appkey="kVi6CyjblnL3Gp0BzGEHq2pkLqpaWSWJbXU0qnZn"
           data-domain="{{shop.permanent_domain | escape }}"
           data-product-id="{{ product.id }}"
           data-product-models="{{ product.id }}"
           data-name="{{ product.title | escape }}"
           data-url="{{ shop.url }}{{ product.url }}"
           data-image-url="{{ product.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&','%26'}}"
           data-description="{{ product.description | escape }}"
           data-bread-crumbs="{% for tag in product.tags %}{{ tag | escape }};{% endfor %}" style="display:block;float:none;margin-bottom: 10px;">
      </div>          
      <!--  Yotpo Review Start Ratings  -->
    </div> 

