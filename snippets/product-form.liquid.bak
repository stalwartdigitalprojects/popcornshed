          <li id="tab2">
            <div class="description bottom desc-tab" itemprop="description">
            <p><span>
               {{ product.metafields.c_f.ingredients }}
            
              </span>
            </p>
            </div>
          </li>
          {% endif %}
          {% if section.settings.tab3_title != blank and product.metafields.c_f.ingredients != blank %}
          <li id="tab3">
            <div class="description bottom desc-tab" itemprop="description">
            <p><span>
                  {{ product.metafields.c_f.allergens }}
              </span>
            </p>
            </div>
          </li>
          {% endif %}
          {% if section.settings.tab4_title != blank and product.metafields.c_f.nutritional != blank %}
          <li id="tab4">
            <div class="description bottom desc-tab" itemprop="description">
            <p><span>
              {{ product.metafields.c_f.nutritional }}
              </span>
            </p>
            </div>
