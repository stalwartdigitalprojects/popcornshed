          {% if section.settings.tab3_title != blank and product.metafields.c_f.ingredients != blank %}<li><a href="#tab3" data-no-instant="true">{{ section.settings.tab3_title }}</a></li>{% endif %}
          {% if section.settings.tab4_title != blank  and product.metafields.c_f.nutritional != blank  %}<li><a href="#tab4" data-no-instant="true">{{ section.settings.tab4_title }}</a></li>{% endif %}          
          {% endif %}
