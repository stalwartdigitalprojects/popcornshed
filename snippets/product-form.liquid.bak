              </div>
              <div class="bigdata" style="display:none"> {{product.description }}
                
                <a href="javascript:;"  class="show-less" >[-]</a>
              </div>
            </div>
            {% endif %}
          </dd>

          {% if section.settings.enable_desc_tabs %}
          
          {% if section.settings.tab2_title != blank and product.metafields.c_f.allergens != blank %}
          <dt><button type="button" aria-controls="panel-01" aria-expanded="true">{{ section.settings.tab2_title }}</button></dt>
          <dd id="panel-01" aria-hidden="false">
            {{ product.metafields.c_f.ingredients }}
          </dd>
          {% endif %}
          
          {% if section.settings.tab3_title != blank and product.metafields.c_f.ingredients != blank %}
          <dt><button type="button" aria-controls="panel-01" aria-expanded="true">{{ section.settings.tab3_title }}</button></dt>
          <dd id="panel-01" aria-hidden="false">
            {{ product.metafields.c_f.allergens }}
          </dd>
          {% endif %}
          
          {% if section.settings.tab4_title != blank and product.metafields.c_f.nutritional != blank %}
          <dt><button type="button" aria-controls="panel-01" aria-expanded="true">{{ section.settings.tab4_title }}</button></dt>
          <dd id="panel-01" aria-hidden="false">
            {{ product.metafields.c_f.nutritional }}
          </dd>
          {% endif %}
          
          {% endif %}
      		</dl>
</div>

